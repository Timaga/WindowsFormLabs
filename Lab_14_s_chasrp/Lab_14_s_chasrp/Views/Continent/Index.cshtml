@model List<ContinentModel>

@{
    ViewData["Title"] = "Continent";
}

<h1>Continent</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">title</th>
            <th scope="col">date_create</th>          
        </tr>
    </thead>
    <tbody>
        @foreach (var faculty in Model)
        {
            <tr>
                <th scope="row">@faculty.id</th>
                <td>@faculty.title</td>
                <td>@faculty.date_create</td>         
                <td>
                    <form action="/Faculty/Delete/@faculty.id">
                        <button type="submit" class="btn btn-danger m-1">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<form action="/Continent/Insert">
    <div class="d-flex m-1">
        <label class="m-1">Title:</label>
        <input class="form-control" type="text" name="title" required />
        <label class="m-1">date_create:</label>
        <input class="form-control" type="text" name="date_create" required />
        <button class="btn btn-success m-1" type="submit">Insert</button>
    </div>
</form>
<form action="/Continent/Update">
    <div class="d-flex m-1">
        <label class="m-1">Id:</label>
        <select class="form-control" name="id" required>
            @foreach (var faculty in Model)
            {
                <option value="@faculty.id">@faculty.id</option>
            }
        </select>
        <label class="m-1">Title:</label>
        <input class="form-control" type="text" name="title" required />
        <label class="m-1">date_create:</label>
        <input class="form-control" type="text" name="date_create" required />
        <button class="btn btn-secondary m-1" type="submit">Update</button>
    </div>
</form>